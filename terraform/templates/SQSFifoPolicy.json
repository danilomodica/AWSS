{
  "Version": "2008-10-17",
  "Id": "__default_policy_ID",
  "Statement": [
    {
      "Sid": "__owner_statement",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::${iam}:root"
      },
      "Action": "SQS:*",
      "Resource": "arn:aws:sqs:${region}:${iam}:${queue_name}"
    },
    {
      "Sid": "__sender_statement",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::${iam}:role/${role_name}"
      },
      "Action": "SQS:SendMessage",
      "Resource": "arn:aws:sqs:${region}:${iam}:${queue_name}"
    },
    {
      "Sid": "__receiver_statement",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::${iam}:root"
      },
      "Action": [
        "SQS:ChangeMessageVisibility",
        "SQS:DeleteMessage",
        "SQS:ReceiveMessage"
      ],
      "Resource": "arn:aws:sqs:${region}:${iam}:${queue_name}"
    }
  ]
}